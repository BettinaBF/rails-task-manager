<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<ul>
  <% if task.completed %>
  <li> [x] <%= link_to task.title, task_path(task) %> <%= link_to "delete task", tasks_delete_path(task), method: :delete %></li>
  <% else%>
   <li> [ ] <%=link_to task.title, task_path(task)%> <%= link_to "delete task", tasks_delete_path(task), method: :delete %></li>
  <% end %>
</ul>
<% end %>

<%= link_to " + Add a new task", tasks_new_path %>
